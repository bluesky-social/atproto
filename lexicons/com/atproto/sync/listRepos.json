{
  "lexicon": 1,
  "id": "com.atproto.sync.listRepos",
  "defs": {
    "main": {
      "type": "query",
      "description": "List DIDs and root CIDs of hosted repos.",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "default": 500
          },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["repos"],
          "properties": {
            "cursor": { "type": "string" },
            "repos": {
              "type": "array",
              "items": { "type": "ref", "ref": "#repo" }
            }
          }
        }
      }
    },
    "repo": {
      "type": "object",
      "required": ["did", "head", "rev"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "head": { "type": "string", "format": "cid" },
        "rev": { "type": "string" }
      }
    }
  }
}
