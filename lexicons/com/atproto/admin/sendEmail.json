{
  "lexicon": 1,
  "id": "com.atproto.admin.sendEmail",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Send email to a user's primary email address",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["recipientDid", "content"],
          "properties": {
            "recipientDid": { "type": "string", "format": "did" },
            "content": { "type": "string" },
            "subject": { "type": "string" }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["sent"],
          "properties": {
            "sent": { "type": "boolean" }
          }
        }
      }
    }
  }
}
