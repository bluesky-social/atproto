{
  "lexicon": 1,
  "id": "temp.dm.defs",
  "defs": {
    "message": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "id": { "type": "string" },
        "text": {
          "type": "string",
          "maxLength": 10000,
          "maxGraphemes": 1000
        },
        "facets": {
          "type": "array",
          "description": "Annotations of text (mentions, URLs, hashtags, etc)",
          "items": { "type": "ref", "ref": "app.bsky.richtext.facet" }
        },
        "embed": {
          "type": "union",
          "refs": [
            "app.bsky.embed.record"
          ]
        }
      }
    },
    "messageView": {
      "type": "object",
      "required": ["id", "text", "sentAt"],
      "properties": {
        "id": { "type": "string" },
        "text": {
          "type": "string",
          "maxLength": 10000,
          "maxGraphemes": 1000
        },
        "facets": {
          "type": "array",
          "description": "Annotations of text (mentions, URLs, hashtags, etc)",
          "items": { "type": "ref", "ref": "app.bsky.richtext.facet" }
        },
        "embed": {
          "type": "union",
          "refs": [
            "app.bsky.embed.record"
          ]
        },
        "sentAt": { "type": "string", "format": "datetime" }
      }
    },
    "deletedMessage": {
      "type": "object",
      "required": ["id", "sentAt"],
      "properties": {
        "id": { "type": "string" },
        "sentAt": { "type": "string", "format": "datetime" }
      }
    },
    "chatView": {
      "type": "object",
      "required": ["id", "members", "unreadCount"],
      "properties": {
        "id": { "type": "string" },
        "members": {
          "type": "array",
          "items": { "type": "string", "format": "did" }
        },
        "lastMessage": {
          "type": "union",
          "refs": [
            "#messageView",
            "#deletedMessage"
          ]
        },
        "unreadCount": { "type": "integer" }
      }
    },
    "incomingMessageSetting": {
      "type": "string",
      "knownValues": [
        "all",
        "none",
        "following"
      ]
    }
  }
}
