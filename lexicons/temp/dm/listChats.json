{
  "lexicon": 1,
  "id": "temp.dm.listChats",
  "defs": {
    "main": {
      "type": "query",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["chats"],
          "properties": {
            "cursor": { "type": "string" },
            "chats": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "temp.dm.defs#chatView"
              }
            }
          }
        }
      }
    }
  }
}
