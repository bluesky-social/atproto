{
  "lexicon": 1,
  "id": "app.bsky.getUsersSearch",
  "type": "query",
  "description": "Find users matching search criteria",
  "parameters": {
    "term": {"type": "string", "required": true},
    "limit": {"type": "number", "maximum": 100},
    "before": {"type": "string"}
  },
  "output": {
    "encoding": "application/json",
    "schema": {
      "type": "object",
      "required": ["users"],
      "properties": {
        "cursor": {"type": "string"},
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["did", "name"],
            "properties": {
              "did": {"type": "string"},
              "name": {"type": "string"},
              "displayName": {
                "type": "string",
                "maxLength": 64
              },
              "description": {"type": "string"},
              "indexedAt": {"type": "string", "format": "date-time"}
            }
          }
        }
      }
    }
  }
}
