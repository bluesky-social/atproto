{
  "lexicon": 1,
  "id": "app.bsky.profile",
  "type": "record",
  "record": {
    "type": "object",
    "required": ["displayName"],
    "properties": {
      "displayName": {
        "type": "string",
        "maxLength": 64
      },
      "description": {
        "type": "string",
        "maxLength": 256
      },
      "badges": {"type": "array", "items": {"$ref": "#/$defs/badgeRef"}}
    },
    "$defs": {
      "badgeRef": {
        "type": "object",
        "required": ["uri"],
        "properties": {
          "uri": {"type": "string"}
        }
      }
    }
  }
}