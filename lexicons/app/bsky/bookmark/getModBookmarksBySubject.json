{
  "lexicon": 1,
  "id": "app.bsky.bookmark.getModBookmarksBySubject",
  "defs": {
    "main": {
      "type": "query",
      "description": "Moderation endpoint to get bookmarks by subject. Requires moderation service auth.",
      "parameters": {
        "type": "params",
        "required": ["subject"],
        "properties": {
          "subject": {
            "type": "string",
            "format": "at-uri",
            "description": "AT-URI of the subject (eg, a post record)."
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["bookmarks"],
          "properties": {
            "cursor": { "type": "string" },
            "bookmarks": {
              "type": "array",
              "items": { "type": "ref", "ref": "#bookmark" }
            }
          }
        }
      }
    },
    "bookmark": {
      "type": "object",
      "required": ["indexedAt", "actor"],
      "properties": {
        "indexedAt": { "type": "string", "format": "datetime" },
        "actor": { "type": "ref", "ref": "app.bsky.actor.defs#profileView" }
      }
    }
  }
}
