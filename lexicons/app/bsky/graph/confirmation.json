{
  "lexicon": 1,
  "id": "app.bsky.graph.confirmation",
  "type": "record",
  "key": "tid",
  "record": {
    "type": "object",
    "required": ["originator", "assertion", "createdAt"],
    "properties": {
      "originator": {
        "type": "object",
        "required": ["did", "declaration"],
        "properties": {
          "did": {"type": "string"},
          "declaration": {"$ref": "#/defs/declaration"}
        }
      },
      "assertion": {
        "type": "object",
        "required": ["uri", "cid"],
        "properties": {
          "uri": {"type": "string"},
          "cid": {"type": "string"}
        }
      },
      "createdAt": {"type": "string", "format": "date-time"}
    }
  },
  "defs": {
    "declaration": {
      "type": "object",
      "required": ["cid", "actorType"],
      "properties": {
        "cid": {"type": "string"},
        "actorType": {
          "oneOf": [
            {"$ref": "#/defs/actorKnown"},
            {"$ref": "#/defs/actorUnknown"}
          ]
        }
      }
    },
    "actorKnown": {
      "type": "string",
      "enum": ["app.bsky.system.actorUser", "app.bsky.system.actorScene"]
    },
    "actorUnknown": {
      "type": "string",
      "not": {"enum": ["app.bsky.system.actorUser", "app.bsky.system.actorScene"]}
    }
  }
}
