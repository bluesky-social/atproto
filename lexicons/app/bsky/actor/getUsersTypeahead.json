{
  "lexicon": 1,
  "id": "app.bsky.actor.searchTypeahead",
  "type": "query",
  "description": "Find user suggestions for a search term",
  "parameters": {
    "term": {"type": "string", "required": true},
    "limit": {"type": "number", "maximum": 100}
  },
  "output": {
    "encoding": "application/json",
    "schema": {
      "type": "object",
      "required": ["users"],
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["did", "handle"],
            "properties": {
              "did": {"type": "string"},
              "handle": {"type": "string"},
              "displayName": {
                "type": "string",
                "maxLength": 64
              }
            }
          }
        }
      }
    }
  }
}
