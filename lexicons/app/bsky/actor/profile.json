{
  "lexicon": 1,
  "id": "app.bsky.actor.profile",
  "defs": {
    "main": {
      "type": "record",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": ["displayName"],
        "properties": {
          "displayName": {
            "type": "string",
            "maxLength": 64
          },
          "description": {
            "type": "string",
            "maxLength": 256
          },
          "avatar": {
            "type": "image",
            "accept": ["image/png", "image/jpeg"],
            "maxWidth": 2000,
            "maxHeight": 2000,
            "maxSize": 1000000
          },
          "banner": {
            "type": "image",
            "accept": ["image/png", "image/jpeg"],
            "maxWidth": 6000,
            "maxHeight": 2000,
            "maxSize": 1000000
          }
        }
      }
    }
  }
}