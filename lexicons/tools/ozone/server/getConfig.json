{
  "lexicon": 1,
  "id": "tools.ozone.server.getConfig",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get details about ozone's server configuration.",
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "appview": {
              "type": "ref",
              "ref": "#serviceConfig"
            },
            "pds": {
              "type": "ref",
              "ref": "#serviceConfig"
            },
            "blobDivert": {
              "type": "ref",
              "ref": "#serviceConfig"
            },
            "viewerRole": {
              "type": "string"
            }
          }
        }
      }
    },
    "serviceConfig": {
      "type": "object",
      "properties": {
        "configured": {
          "type": "boolean"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
