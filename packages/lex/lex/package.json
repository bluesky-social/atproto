{
  "name": "@atproto/lex",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Lexicon tooling for AT",
  "keywords": [
    "atproto",
    "lexicon",
    "lex"
  ],
  "homepage": "https://atproto.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluesky-social/atproto",
    "directory": "packages/lex/lex"
  },
  "files": [
    "./index.js",
    "./index.d.ts",
    "./polyfills.js",
    "./polyfills.d.ts",
    "./bin"
  ],
  "bin": {
    "lex": "./bin/lex"
  },
  "sideEffects": false,
  "type": "commonjs",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "browser": "./index.js",
      "types": "./index.d.ts"
    },
    "./polyfills": {
      "require": "./polyfills.js",
      "browser": "./polyfills.js",
      "types": "./polyfills.d.ts"
    }
  },
  "dependencies": {
    "@atproto/lex-builder": "workspace:*",
    "@atproto/lex-validation": "workspace:*",
    "@formatjs/intl-segmenter": "^11.7.12",
    "core-js": "^3",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@types/yargs": "^17.0.33",
    "jest": "^28.1.2"
  },
  "scripts": {
    "build": "./bin/lex build --clear --in ./lexicons --out ./tests/lexicons -- ignore additional npm args",
    "test": "jest"
  }
}
