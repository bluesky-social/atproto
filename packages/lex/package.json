{
  "name": "@atproto/lex",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Lexicon tooling for AT",
  "keywords": [
    "atproto",
    "lexicon",
    "lex"
  ],
  "homepage": "https://atproto.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluesky-social/atproto",
    "directory": "packages/lex"
  },
  "files": [
    "./index.js",
    "./index.d.ts",
    "./doc.js",
    "./doc.d.ts",
    "./lex.js",
    "./lex.d.ts",
    "./polyfills.js",
    "./polyfills.d.ts",
    "./bin",
    "./src",
    "./dist"
  ],
  "bin": {
    "lex": "./bin/lex"
  },
  "sideEffects": false,
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "browser": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./lex": {
      "require": "./dist/lex/index.js",
      "browser": "./dist/lex/index.js",
      "types": "./dist/lex/index.d.ts"
    },
    "./doc": {
      "require": "./dist/doc/index.js",
      "browser": "./dist/doc/index.js",
      "types": "./dist/doc/index.d.ts"
    },
    "./polyfills": {
      "require": "./polyfills.js",
      "import": "./polyfills.mjs",
      "types": "./polyfills.d.ts"
    }
  },
  "dependencies": {
    "@atproto/syntax": "workspace:*",
    "@formatjs/intl-segmenter": "^11.7.12",
    "core-js": "^3",
    "multiformats": "^9.9.0",
    "prettier": "^3.2.5",
    "ts-morph": "^27.0.0",
    "tslib": "^2.8.1",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@ts-morph/common": "^0.28.0",
    "@types/node": "^22.18.6",
    "@types/yargs": "^17.0.33",
    "jest": "^28.1.2"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "./bin/lex build --override --in ./lexicons --out ./tests/lexicons",
    "test": "jest"
  }
}
