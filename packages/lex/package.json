{
  "name": "@atproto/lex",
  "private": true,
  "files": [
    "./dist",
    "./index.js",
    "./index.d.ts",
    "./com.js",
    "./com.d.ts",
    "./doc.js",
    "./doc.d.ts",
    "./lex.js",
    "./lex.d.ts",
    "./lex"
  ],
  "bin": {
    "lex": "./bin.js"
  },
  "dependencies": {
    "@atproto/syntax": "workspace:*",
    "multiformats": "^9.9.0",
    "prettier": "^3.2.5",
    "ts-morph": "^27.0.0",
    "tslib": "^2.8.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@ts-morph/common": "^0.28.0",
    "@types/node": "^22.18.6",
    "@types/yargs": "^17.0.33"
  },
  "scripts": {
    "build:lib": "tsc --build tsconfig.lib.json --preserveWatchOutput",
    "build:bin": "tsc --build tsconfig.bin.json --preserveWatchOutput",
    "prebuild:lexicons": "./lex build --clear --no-import-atproto --format --pure-annotations --in ../../lexicons/com/atproto --exclude '*.temp.*' --manifest ./src/manifest.json",
    "build:lexicons": "tsc --build tsconfig.lexicons.json --preserveWatchOutput",
    "build": "pnpm run build:lib && pnpm run build:bin && pnpm run build:lexicons",
    "postbuild": "cp ./src/manifest.json ./dist/manifest.json"
  },
  "sideEffects": false,
  "type": "commonjs",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./lex": {
      "require": "./dist/lex/lex.js",
      "types": "./dist/lex/lex.d.ts"
    },
    "./doc": {
      "require": "./dist/doc/doc.js",
      "types": "./dist/doc/doc.d.ts"
    },
    "./com": {
      "require": "./dist/lexicons/com.js",
      "types": "./dist/lexicons/com.d.ts"
    }
  }
}
