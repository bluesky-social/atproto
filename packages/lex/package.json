{
  "name": "@atproto/lex",
  "private": true,
  "files": [
    "./lib.js",
    "./lib.d.ts",
    "./doc.js",
    "./doc.d.ts",
    "./lex.js",
    "./lex.d.ts",
    "./lex",
    "./src",
    "./dist"
  ],
  "bin": {
    "lex": "./bin.js"
  },
  "dependencies": {
    "@atproto/syntax": "workspace:*",
    "multiformats": "^9.9.0",
    "prettier": "^3.2.5",
    "ts-morph": "^27.0.0",
    "tslib": "^2.8.1",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@ts-morph/common": "^0.28.0",
    "@types/node": "^22.18.6",
    "@types/yargs": "^17.0.33",
    "jest": "^28.1.2"
  },
  "scripts": {
    "build:lib": "tsc --build tsconfig.lib.json",
    "build:bin": "tsc --build tsconfig.bin.json",
    "prebuild:tests": "./lex build --clear --out ./src/tests/lexicons --include com.example.*",
    "build:tests": "tsc --build tsconfig.tests.json --noEmit",
    "build": "pnpm run build:lib && pnpm run build:bin && pnpm run build:tests",
    "test": "jest"
  },
  "sideEffects": false,
  "type": "commonjs",
  "main": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "require": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./lex": {
      "require": "./dist/lex/index.js",
      "types": "./dist/lex/index.d.ts"
    },
    "./doc": {
      "require": "./dist/doc/doc.js",
      "types": "./dist/doc/doc.d.ts"
    }
  }
}
