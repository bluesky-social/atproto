{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.hbs",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": [".eslintrc"],
      "options": {
        "parser": "json",
        "trailingComma": "none"
      }
    }
  ]
}
